---
import "../styles/global.css";

import Navbar from "@components/navbar.astro";
import Footer from "@components/footer.astro";

interface DSAItem {
	name: string;
	description: string;
}

const DSA_COLLECTION: DSAItem[] = [
	{
		name: "Heavy-Light Decomposition",
		description: "Update and query tree paths efficiently by decomposing the tree into heavy and light edges.",
	},
	{
		name: "Lowest Common Ancestor",
		description: "Special implementation of LCA with O(N) preprocessing and O(1) query time.",
	},
	{
		name: "Lazy Segment Tree",
		description: "Efficient range update and queries, along with binary searching using iterative tree traversal.",
	},
	{
		name: "Aho-Corasick",
		description: "Match multiple patterns in a text simultaneously with a trie automaton.",
	},
	{
		name: "Rolling Hash",
		description: "Quickly compute polynomial hashes of substrings.",
	},
	{
		name: "Mo's Algorithm on Trees",
		description: "Offline computation of path queries with Mo's algorithm adapted for trees.",
	},
];
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width,initial-scale=1" />
		<title>Sam Huang</title>
	</head>
	<body>
		<Navbar />
		<div id="avatar-cam-intro" class="flex items-center gap-48 bg-black px-40 py-10">
			<img src="/images/avatar-cams/GDMonster.png" alt="GD Monster Avatar" />
			<div class="separator" aria-hidden="true"></div>
			<div class="w-full self-center text-white">
				<h1 class="mb-10 text-5xl font-extrabold">CREATE YOUR PERSONA</h1>
				<p class="mb-10 text-xl/8 font-light tracking-wide">
					Bring your content and online presence with personalized Avatar Cam to a new level. Avatar Cam utilizes 2D
					art, bringing unique visual customization and interactivity to the table. Features to enhance interactivity
					include animations, controller input, and <span class="highlight px-1.5 font-extrabold">NEW</span>
					Twitch Integration!
					<a href="https://forms.gle/qJoRmBMT5kUgffUBA" class="font-extrabold underline">Request a commission</a>
					today!
				</p>
				<p class="text-xl tracking-wide">
					Learn more about its features and showcases <a href="/avatar-cam" class="underline">here</a>
				</p>
			</div>
		</div>
		<div id="dsa-collection" class="gap-48 bg-gray-800 px-40 py-10">
			<h1 class="mb-10 text-center text-4xl font-extrabold text-white">Personal DSA Collection</h1>
			<div id="dsa-carousel" class="mb-10">
				<ul class="mb-4 flex flex-wrap justify-center gap-12 text-white">
					{
						DSA_COLLECTION.map((item) => (
							<li class="dsa-item">
								<h1 class="text-2xl font-extrabold">{item.name}</h1>
								<p class="mt-2 text-sm leading-snug">{item.description}</p>
							</li>
						))
					}
					<li class="dsa-item-more inline-flex self-center">
						<img src="https://img.icons8.com/?size=100&id=12599&format=png&color=000000" alt="GitHub" />
						<a class="text-2xl font-extrabold" href="https://github.com/celonymire/competitive-programming">AND MORE!</a
						>
					</li>
				</ul>
			</div>
			<div class="flex justify-evenly">
				<div class="dsa-attribute">
					<img src="https://img.icons8.com/?size=100&id=iOFVfD3gi7w6&format=png&color=000000" alt="Axe" />
					<h1>Tested</h1>
				</div>
				<div class="dsa-attribute">
					<img src="https://img.icons8.com/?size=100&id=QDgnZW9BLy1H&format=png&color=000000" alt="Scroll" />
					<h1>Documented</h1>
				</div>
				<div class="dsa-attribute">
					<img src="https://img.icons8.com/?size=100&id=YVToA9CPXtKW&format=png&color=000000" alt="Module" />
					<h1>Modularized</h1>
				</div>
				<div class="dsa-attribute">
					<img src="https://img.icons8.com/?size=100&id=iRpUJX5thBgS&format=png&color=000000" alt="Utility" />
					<h1>Comprehensive</h1>
				</div>
			</div>
		</div>
	</body>
	<Footer />
</html>

<style>
	.highlight {
		background: linear-gradient(230deg, gold, red);
		background-clip: text;
		color: transparent;
		border: 2px solid;
		border-image: linear-gradient(230deg, gold, red) 1;
		display: inline-block;
		line-height: 1;
		padding-bottom: 4px;
	}

	#avatar-cam-intro {
		position: relative;
	}

	#avatar-cam-intro::before {
		content: "";
		position: absolute;
		inset: 0;
		padding: 5px;
		--period: 1000px; /* length of one full color cycle */
		background: linear-gradient(90deg, goldenrod 0%, red 50%, goldenrod 100%);
		background-size: var(--period) 100%;
		background-repeat: repeat-x;
		animation: move-gradient 1s linear infinite;
		will-change: background-position;
		mask:
			linear-gradient(#000 0 0) content-box,
			linear-gradient(#000 0 0);
		mask-composite: exclude;
		pointer-events: none;
	}

	.separator {
		width: 2px;
		background: #ffffff;
		align-self: stretch;
	}

	#dsa-collection {
		position: relative;
		overflow: hidden;
	}

	#dsa-collection::before {
		content: "";
		position: absolute;
		inset: 0;
		background-image:
			repeating-linear-gradient(45deg, #1f2937 0px, #1f2937 20px, #374151 20px, #374151 40px),
			repeating-linear-gradient(-45deg, #1f2937 0px, #1f2937 20px, #374151 20px, #374151 40px);
		background-blend-mode: multiply;
		opacity: 0.6;
		pointer-events: none;
		z-index: 0;
	}

	#dsa-collection > * {
		position: relative;
		z-index: 1;
	}

	.dsa-item {
		min-width: 200px;
		max-width: 350px;
	}

	.dsa-item-more {
		background-color: white;
		padding: 5px 10px;
		font-size: 1.5rem;
		color: black;
	}

	.dsa-item-more img {
		width: 32px;
		height: 32px;
		margin-right: 10px;
	}

	.dsa-attribute {
		display: flex;
		align-self: center;
	}

	.dsa-attribute img {
		width: 48px;
		height: 48px;
		margin-right: 10px;
	}

	.dsa-attribute h1 {
		font-size: 2rem;
		font-weight: bolder;
		color: white;
		align-self: center;
	}

	@keyframes move-gradient {
		0% {
			background-position: 0 50%;
		}
		100% {
			background-position: var(--period) 50%;
		}
	}
</style>
